# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Connection string format: postgresql://user:password@host:port/database
# Replace with your database provider's connection string
DATABASE_URL=postgresql://username:password@your-db-host:5432/your_database

# ============================================================================
# EMAIL SERVICE CONFIGURATION
# ============================================================================
# SendGrid API Key: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Verified sender email address in your email service
SENDGRID_FROM_EMAIL=bookings@yourdomain.com

# Business notification email for booking alerts
BUSINESS_NOTIFICATION_EMAIL=notifications@yourdomain.com

# ============================================================================      
# API CONFIGURATION
# ============================================================================      
# Your domain for CORS and API base URL
VITE_API_BASE_URL=https://yourdomain.com
ALLOWED_ORIGIN=https://yourdomain.com

# Functions/Serverless endpoint (varies by platform)
# DigitalOcean: https://faas-region-your-namespace.doserverless.co
# Vercel: Auto-configured
# Netlify: https://your-site.netlify.app/.netlify/functions
# ============================================================================      
# ANALYTICS & TRACKING
# ============================================================================      
# Google Analytics 4 measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Ads tracking (optional)
VITE_GOOGLE_ADS_ID=AW-XXXXXXXXX
VITE_GOOGLE_ADS_CONVERSION_LABEL=XXXXXXXXX

# Google Tag Manager (optional)
VITE_GTM_ID=GTM-XXXXXXX

# PostHog for product analytics (optional)
POSTHOG_API_KEY=phc_your_posthog_key_here

# Plausible Analytics domain (optional, privacy-focused)
PLAUSIBLE_DOMAIN=yourdomain.com

# ============================================================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================================================      
# Stripe (recommended for international)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# PayPal (alternative/additional)
PAYPAL_CLIENT_ID=your_paypal_client_id

# Regional payment processors (examples)
# Australia - Eway
# EWAY_API_KEY=your_eway_api_key
# EWAY_PAYMENT_LIVE=false

# Australia - Tyro
# TYRO_API_KEY=your_tyro_api_key
# ============================================================================      
# AUTHENTICATION & SECURITY
# ============================================================================      
# JWT secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here

# ============================================================================      
# FEATURE FLAGS
# ============================================================================      
VITE_ASSESSMENT_ENABLED=false
VITE_BOOKING_ENABLED=true
VITE_PAYMENTS_ENABLED=true
VITE_ANALYTICS_ENABLED=true

# ============================================================================      
# THIRD-PARTY INTEGRATIONS
# ============================================================================      
# OpenAI for AI features (optional)
VITE_OPENAI_API_KEY=sk-proj-your_openai_api_key

# External booking systems integration (customize as needed)
EXTERNAL_BOOKING_URL=https://your-booking-system.com/api/booking
EXTERNAL_AVAILABILITY_URL=https://your-booking-system.com/api/availability

# SimplyBook.me Integration
# Company name: The subdomain or company identifier from SimplyBook.me
VITE_SIMPLYBOOK_COMPANY=your-company-name
# API Key: From SimplyBook.me Settings â†’ API Settings
VITE_SIMPLYBOOK_API_KEY=your-api-key-here
# Secret API Key: For server-side operations (keep secure!)
VITE_SIMPLYBOOK_SECRET_KEY=your-secret-key-here
# REST API Endpoint
VITE_SIMPLYBOOK_API_URL=https://user-api-v2.simplybook.net

# ============================================================================      
# ENVIRONMENT CONFIGURATION
# ============================================================================      
NODE_ENV=production
DEBUG=false

# ============================================================================      
# SECURITY BEST PRACTICES
# ============================================================================      
# 1. Never commit .env files to git (ensure .gitignore includes .env*)
# 2. Use your deployment platform's secrets management for production
# 3. Rotate API keys and secrets periodically
# 4. Use strong, unique passwords and secrets
# 5. Enable 2FA on all connected services