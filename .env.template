# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Connection string format: postgresql://user:password@host:port/database
# Replace with your database provider's connection string
DATABASE_URL=postgresql://username:password@your-db-host:5432/your_database

# For separate DB variables (alternative to connection string)
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=your_database
DB_USER=username
DB_PASSWORD=password
DB_SSL=require

# ============================================================================
# EMAIL SERVICE CONFIGURATION
# ============================================================================
# SendGrid API Key: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Verified sender email address in your email service
SENDGRID_FROM_EMAIL=bookings@yourdomain.com

# Business notification email for booking alerts
BUSINESS_NOTIFICATION_EMAIL=notifications@yourdomain.com

# ============================================================================      
# API CONFIGURATION
# ============================================================================      
# Your domain for CORS and API base URL
VITE_API_BASE_URL=https://yourdomain.com
ALLOWED_ORIGIN=https://yourdomain.com

# Functions/Serverless endpoint (varies by platform)
# DigitalOcean: https://faas-region-your-namespace.doserverless.co
# Vercel: Auto-configured
# Netlify: https://your-site.netlify.app/.netlify/functions
VITE_FUNCTIONS_URL=https://your-functions-endpoint.com

# ============================================================================      
# ANALYTICS & TRACKING
# ============================================================================      
# Google Analytics 4 measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Ads tracking (optional)
VITE_GOOGLE_ADS_ID=AW-XXXXXXXXX
VITE_GOOGLE_ADS_CONVERSION_LABEL=XXXXXXXXX

# Google Tag Manager (optional)
VITE_GTM_ID=GTM-XXXXXXX

# PostHog for product analytics (optional)
POSTHOG_API_KEY=phc_your_posthog_key_here

# Plausible Analytics domain (optional, privacy-focused)
PLAUSIBLE_DOMAIN=yourdomain.com

# ============================================================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================================================      
# Stripe (recommended for international)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal (alternative/additional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Square (alternative)
SQUARE_APPLICATION_ID=your_square_app_id
SQUARE_ACCESS_TOKEN=your_square_access_token

# Regional payment processors (examples)
# Australia - Eway
EWAY_API_KEY=your_eway_api_key
EWAY_PAYMENT_LIVE=false

# Australia - Tyro
TYRO_API_KEY=your_tyro_api_key
TYRO_MERCHANT_ID=your_tyro_merchant_id

# ============================================================================      
# AUTHENTICATION & SECURITY
# ============================================================================      
# JWT secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here

# Session secret for server-side sessions
SESSION_SECRET=your_session_secret_here

# API rate limiting (requests per window)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================================================      
# FEATURE FLAGS
# ============================================================================      
# Enable/disable features
VITE_ASSESSMENT_ENABLED=false
VITE_BOOKING_ENABLED=true
VITE_PAYMENTS_ENABLED=true
VITE_ANALYTICS_ENABLED=true
VITE_CHAT_ENABLED=false

# ============================================================================      
# THIRD-PARTY INTEGRATIONS
# ============================================================================      
# OpenAI for AI features (optional)
VITE_OPENAI_API_KEY=sk-proj-your_openai_api_key

# Calendar integrations
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
OUTLOOK_CLIENT_ID=your_outlook_client_id

# SMS/WhatsApp notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# External booking systems (examples)
EXTERNAL_BOOKING_URL=https://your-booking-system.com/api
EXTERNAL_AVAILABILITY_URL=https://your-booking-system.com/api/availability

# ============================================================================      
# ENVIRONMENT CONFIGURATION
# ============================================================================      
NODE_ENV=production
DEBUG=false
PORT=8080

# Application settings
APP_NAME=Your Service Booking Platform
APP_VERSION=1.0.0
APP_DOMAIN=yourdomain.com

# ============================================================================      
# DEPLOYMENT PLATFORM SPECIFIC
# ============================================================================      
# DigitalOcean App Platform
# DO_SPACES_BUCKET=your-spaces-bucket
# DO_SPACES_REGION=your-region

# Vercel
# VERCEL_URL=auto-configured

# Netlify
# NETLIFY_SITE_ID=your-site-id

# AWS
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ============================================================================      
# NOTES & SECURITY BEST PRACTICES
# ============================================================================      
# 1. Never commit .env files to git (ensure .gitignore includes .env*)
# 2. Use your deployment platform's secrets management for production
# 3. Rotate API keys and secrets periodically
# 4. Use strong, unique passwords and secrets
# 5. Enable 2FA on all connected services
# 6. Regularly audit access logs and API usage
# 7. Use HTTPS everywhere and implement proper CORS policies