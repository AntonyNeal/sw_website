# BuildHub MCP Server Environment Variables
# ================================================
# IMPORTANT: Never commit this file with real credentials!
# The .env file is gitignored for security.

# Required: Your BuildHub API key
# Get this from your BuildHub dashboard -> API Settings -> Generate New Token
# Example: bh_live_sk_1234567890abcdef...
BUILDHUB_API_KEY=your_buildhub_api_key_here

# Required: Base URL for BuildHub API
# Production: https://api.buildhub.com/v1
# Staging: https://staging-api.buildhub.com/v1
# Development: http://localhost:3000/api/v1
BUILDHUB_API_URL=https://api.buildhub.com/v1

# Optional: Default tenant ID to use when not specified in tool calls
# Find this in BuildHub dashboard -> Organization Settings -> Tenant ID
# Example: tenant_abc123def456
BUILDHUB_TENANT_ID=your_default_tenant_id_here

# Optional: API request timeout in milliseconds (default: 30000)
BUILDHUB_TIMEOUT=30000

# Optional: Enable debug logging (true/false)
BUILDHUB_DEBUG=false